# DataPilot Backend Environment Variables
# Copy this file to .env and fill in your values

# ======================================
# Application Settings
# ======================================
APP_NAME=DataPilot
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# ======================================
# Database Configuration (Required for full functionality)
# ======================================
# For Vercel: Use Neon, Supabase, or any PostgreSQL provider
# Example: postgresql://user:password@host:5432/database
DATABASE_URL=postgresql://user:password@localhost:5432/datapilot_db

# ======================================
# Redis Configuration (Optional - for caching)
# ======================================
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# ======================================
# Clerk Authentication (Optional)
# ======================================
# Get these from https://dashboard.clerk.com
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxx
CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxx
CLERK_DOMAIN=your-app.clerk.accounts.dev
CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxx

# ======================================
# Security Settings
# ======================================
# Generate a secure random string for production
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ======================================
# CORS Configuration
# ======================================
# Comma-separated list of allowed origins
# For Vercel frontend: https://your-app.vercel.app
CORS_ORIGINS=http://localhost:3000,https://your-app.vercel.app
ALLOWED_HOSTS=localhost,127.0.0.1,your-api.vercel.app

# ======================================
# Server Configuration (Local Development Only)
# ======================================
HOST=0.0.0.0
PORT=8000

# ======================================
# AWS Configuration (For Bedrock LLM)
# ======================================
# Get these from AWS IAM Console
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ======================================
# AWS Bedrock LLM Configuration
# ======================================
# Enable natural language to SQL conversion
BEDROCK_ENABLED=false
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.1

# Optional: Bedrock Guardrails (recommended for production)
# Create guardrails in AWS Bedrock Console
BEDROCK_GUARDRAIL_ID=
BEDROCK_GUARDRAIL_VERSION=
